{
  "apiVersion": "autoscaling/v2beta2",
  "kind": "HorizontalPodAutoscaler",
  "metadata": {
    "name": "hpa-practice"
  },
  "spec": {
    "minReplicas": 3,
    "maxReplicas": 6,
    "metrics": [
      {
        "type": "Resource",
        "resource": {
          "name": "cpu",
          "target": {
            "type": "Utilization",
            "averageUtilization": 20
          }
        }
      },
      {
        "type": "Resource",
        "resource": {
          "name": "memory",
          "target": {
            "type": "Utilization",
            "averageUtilization": 20
          }
        }
      }
    ],
    "scaleTargetRef": {
      "apiVersion": "apps/v1",
      "kind": "ReplicaSet",
      "name": "myapp-replicas"
    },
    "behavior": {
      "scaleDown": {
        "policies": [
          {
            "type": "Percent",
            "value": 10,
            "periodSeconds": 60
          }
        ]
      }
    }
  }
}